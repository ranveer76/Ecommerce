{
    "version": 2,
    "builds": [
        {
            "src": "Backend/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "Backend/public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/Backend/public/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/Backend/$1"
        }
    ]
}
